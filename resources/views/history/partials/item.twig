<section id="one" class="wrapper style2">
	<div class="inner">
		<div class="grid-style">
			<div>
				<div class="box">
					<div class="content">
						<header class="align-center">
							<p>{{ summary.username }}</p>
                            {% if summary.type() is same as ('question') %}
							    <h2>{{ summary.subject() }}</h2>
                            {% endif %}
						</header>
						<p>{{ summary.description() }}</p>

                        {% if summary.type() is same as ('question') %}
                            <h4>Question link</h4>
                        {% else %}
                            <h4>Solution link</h4>    
                        {% endif %}
                            <pre>
                                <code>{{ summary.link() }}</code>
                            </pre>
					</div>
				</div>
			</div>
        </div>
    </div>
</section>
{% extends 'templates/layout.twig' %}

{% block content %}

<body>

    {% include 'templates/partials/menu_header_with_alt.twig' %}
    {% include 'templates/partials/menu.twig' %}
    {% include 'templates/partials/banner.twig' %}

    <section id="one" class="wrapper style2">
    <center>
        <div class="flash">
            {% include 'templates/partials/flash.twig' %}
        </div>
    </center>
    
		<div class="inner">
			<div class="grid-style">

            {% for index, question in paginationItems %}

                {% include 'questions/partials/item.twig' %}
                
            {% endfor %}

            </div>

            <center>
	            <ul class="actions horizontal small">

                    {% if pagination.currentPage() != 1 %}
                    <li><a href="?page={{ pagination.prev() }}" class="button alt small">Prev</a></li>
                    {% endif %}

                    {% include 'pagination/pagination.twig' %}
                    
                    {% if pagination.currentPage() != pagination.lastPage() %}
                    <li><a href="?page={{ pagination.next() }}" class="button alt small">Next</a></li>
                    {% endif %}

                </ul>
            </center>
            

		</div>
	</section>

{% endblock %}